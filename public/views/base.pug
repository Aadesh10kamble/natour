html(lang="en")
    head
        block head 
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            //- link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700" rel="stylesheet")
            //- script(src="https://api.mapbox.com/mapbox-gl-js/v0.50.0/mapbox-gl.js")
            //- script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.js") 
            //- script(src="https://js.stripe.com/v3/")
            script(type = "module" src=".../js/index.js") 
            link(rel="stylesheet" href=".../css/style.css")
            link(rel="shortcut icon" type="image/png" href="/img/favicon.png")
            title Natours | #{title} Tour
    body
        header.header
            nav.nav.nav--tours
                a.nav__el(href="/overview") All tours
                .header__logo 
                    img(src="/img/logo-white.png" alt="Natours logo")
            nav.nav.nav--user
            - if (user) { 
                a.nav__el(href="/api/users/logout" id="logout") LOGOUT
                a.nav__el(href="/my-profile")
                    img.nav__user-img( src=`/img/users/${user.photo}` alt="User photo")
                    span
            -} else {
                a.nav__el(href = "/login") Login 
                a.nav__el.nav__el--cta(href = "/signup") Sign up 
            -}    
        block content
        .footer 
            .footer__logo 
                img(src="/img/logo-green.png" alt="Natours logo")    
            ul.footer__nav 
                li: a(href="#") About Us
                li: a(href="#") About Us 
                li: a(href="#") About Us 
                li: a(href="#") About Us
                li: a(href="#") About Us         
