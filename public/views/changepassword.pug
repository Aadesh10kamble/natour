extends base.pug
block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg 
            form.form.form-newPassword(enctype="multipart/form-data")
                .form__group
                    label.form__label(for='') New Password
                    input#newPassword.form__input(type='password', placeholder='••••••••', required,minlength='8',name = "password")
                .form__group.ma-bt-md
                    label.form__label(for='password') Confirm Password
                    input#confirmNew.form__input(type='password', placeholder='••••••••', required, minlength='8',name = "passwordConfirm")
                .form__group
                    button.btn.btn--green Login